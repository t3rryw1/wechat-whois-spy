/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
text.welcome {
  height: 128rpx;
  margin-top: 80rpx;
  text-align: center;
  vertical-align: center;
  color: #BBB;
}

.main-content{
  display: flex;
  margin: 20px;
  flex: 1;
  margin-top: 100px;
  align-content: center;
  color: #aaa;  
  width:90%;
}

.main-content > button{
  width:100%;
  margin: 20px;
  letter-spacing: 0.2em;
}


